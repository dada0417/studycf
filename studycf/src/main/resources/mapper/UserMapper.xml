<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="studycf.mapper.UserMapper">
	<resultMap type="User" id="UserResultMap">
		<id		column="user_id"	property="userId"/>
		<result column="user_pw"	property="userPw"/>
		<result column="user_nm"	property="userNm"/>
		<result column="user_phone"	property="userPhone"/>
		<result column="user_email"	property="userEmail"/>
		<result column="user_drop"	property="userDrop"/>
		<result column="user_reg_date"	property="userRegDate"/>
	</resultMap>

	<update id="modifyUser" parameterType="User">
		UPDATE user
		<trim prefix="SET" prefixOverrides=",">
			<if test="userPw != null and userPw != ''">
				user_pw		= #{userPw}
			</if>
			<if test="userNm != null and userNm != ''">
				,user_nm			= #{userNm}
			</if>
			<if test="userPhone != null and userPhone != ''">
				,user_phone			= #{userPhone}
			</if>
			<if test="userEmail != null and userEmail != ''">
				,user_email			= #{userEmail}
			</if>
			<if test="userDrop != null and userDrop != ''">
				,user_drop			= #{userDrop}
			</if>
		</trim>
		WHERE
			user_id = #{userId};
	
	</update>
	
	
	
	<insert id="addUser" parameterType="User">
	/*회원가입*/
	INSERT INTO user
		(	 user_id
			,user_pw
			,user_nm
			,user_phone
			,user_email
			,user_drop
			,user_reg_date
		)	VALUES (
			 #{userId}
			,#{userPw}
			,#{userNm}
			,#{userPhone}
			,#{userEmail}
			,'N'
			,CURDATE()
		);
	</insert>
	
	<select id="isIdCheck" parameterType="String" resultType="boolean">
		/* 회원 아이디 중복 체크 */
		SELECT
			IF(COUNT(1) = 1, 0, 1)
		FROM 
		   user
		WHERE 
		   user_id = #{userId};
	</select>
	
	<select id="isIdCheck2" parameterType="String" resultType="String">
		/*아이디로 비번 찾기*/
		SELECT
			user_pw
		FROM
			user
		WHERE
			user_id = #{userId};
	
	</select>
	
	<select id="isPhoneCheck" parameterType="String" resultType="String">
		/*전화번호로 아이디 찾기*/
		SELECT
			user_id
		FROM
			user
		WHERE
			user_phone = #{userPhone};
	
	</select>
	
	
	<select id="getUserInfoById" parameterType="String" resultMap="UserResultMap">
		/*아이디로 회원정보 조회*/
		SELECT 
			 user_id
			,user_pw
			,user_nm
			,user_phone
			,user_email
			,user_drop
			,user_reg_date
		FROM 
			user
		WHERE 
			user_id = #{userId};
	</select>











</mapper>  